
model User {
    id       String    @id @default(cuid()) // primary key
    username String    @unique // user id
    password String
    name     String
    posts    Post[]
    comments Comment[]
    isAdmin  Boolean   @default(false)
}

model Visitor {
    id        String    @id @default(uuid())
    createdAt DateTime  @default(now())
    comments  Comment[]
}